{
  "manifest_version": 2,
  "name": "GitHub Fullscreen Notifications",
  "version": "1.0.0",

  "permissions": ["storage", "tabs"],

  "content_security_policy": "script-src 'self'; object-src 'self';",

  "options_ui": {
    "page": "options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "github-fullscreen-notifications@example.com",
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["extension.js"]
  }
}
